generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  hashedPassword String
  role           String    @default("owner") // "owner" | "supervisor"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  comments       Comment[]
}

model Section {
  id            String         @id @default(cuid())
  slug          String         @unique
  title         String
  sortOrder     Int
  status        String         @default("not_started") // not_started | in_progress | draft | review | done
  content       String         @default("")
  updatedAt     DateTime       @updatedAt
  createdAt     DateTime       @default(now())
  comments      Comment[]
  researchLinks ResearchLink[]
}

model ResearchItem {
  id        String         @id @default(cuid())
  title     String
  authors   String         @default("") // comma-separated
  year      Int?
  url       String?
  doi       String?
  abstract  String         @default("")
  summary   String         @default("") // AI-generated summary
  keywords  String         @default("") // comma-separated
  notes     String         @default("")
  source    String         @default("manual") // manual | semantic_scholar | swepub
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  links     ResearchLink[]
  comments  Comment[]
}

model ResearchLink {
  id             String       @id @default(cuid())
  sectionId      String
  researchItemId String
  section        Section      @relation(fields: [sectionId], references: [id])
  researchItem   ResearchItem @relation(fields: [researchItemId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@unique([sectionId, researchItemId])
}

model Comment {
  id             String        @id @default(cuid())
  content        String
  authorId       String
  sectionId      String?
  researchItemId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  author         User          @relation(fields: [authorId], references: [id])
  section        Section?      @relation(fields: [sectionId], references: [id])
  researchItem   ResearchItem? @relation(fields: [researchItemId], references: [id], onDelete: Cascade)
}
